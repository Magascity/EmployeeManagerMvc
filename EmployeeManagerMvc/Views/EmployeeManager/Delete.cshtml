@model Employee

<h2 class="mt-4">Delete Existing Employee</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> You are about to delete an employee record.
</div>

<form asp-controller="EmployeeManager" asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <div class="mb-3">
        <label class="form-label">Employee ID</label>
        <div class="form-control-plaintext">@Model.EmployeeID</div>
    </div>

    <div class="mb-3">
        <label class="form-label">First Name</label>
        <div class="form-control-plaintext">@Model.FirstName</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <div class="form-control-plaintext">@Model.LastName</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Title</label>
        <div class="form-control-plaintext">@Model.Title</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Birth Date</label>
        <div class="form-control-plaintext">@Model.BirthDate.ToString("dd MMMM yyyy")</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Hire Date</label>
        <div class="form-control-plaintext">@Model.HireDate.ToString("dd MMMM yyyy")</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Country</label>
        <div class="form-control-plaintext">@Model.Country</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <div class="form-control-plaintext">@Model.Notes</div>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="EmployeeManager" asp-action="List" class="btn btn-secondary ms-2">Back to Employee Listing</a>
</form>
